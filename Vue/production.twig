{% block seeProduction %}
    {% for product in productions %}
        <div class="card space white">
            <img src="img/gradient-1336854_1920.jpg" alt="Avatar" style="width:100%">
            <div class="container">
                <p class="name">{{ product.name }}</p>
                <p>{{ product.infos1 }}, {{ product.infos2 }}, {{ product.infos3 }}</p>
                <p>{{ product.description }}</p>
        {% if session %}
                <div class="space row">
                <a class="button" href="index.php?action=deleteProduction&id={{ product.id }}">Supprimer</a>
                <a class="button" href="index.php?action=editProduction&id={{ product.id }}">Modifier</a>
                </div>
        {% endif %}
            </div>
        </div>
    {% endfor %}
{% endblock %}